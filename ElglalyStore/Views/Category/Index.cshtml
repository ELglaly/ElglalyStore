@model List<Category>;
@{
    Layout = "_Mylayout";
}


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="">
    <meta name="keywords" content="bootstrap, bootstrap4">

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="/css/tiny-slider.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">


    <style>
        .container {
            width: 80%;
            margin: 100 px;
            display: flex;
            justify-content: space-between;
            padding: 20px;
  
            
        }

        /* Box styles */
        .box {
            width: 200px;
            height: 200px;
            background-color: white;
            color: #ffffff;
            text-align: center;
            font-weight: bold;
            border-radius: 8px;
            margin: 20px;
            padding-top: 50px;
            display: inline-block;
            cursor: pointer;
        }

        .box:hover {
            background-color:bisque;
        }

    </style>
</head>

<body>
      <h1 style="text-align:center ;padding-top:50px">Categories</h1>
    <div class="product-section">
        <div class="row" style=" padding:50px">
         
            @foreach(var cat in @Model)
            {
                string sorce = @cat.category_name+".png";
                <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0" style="padding-bottom:50px">
                    <a class="product-item" asp-action="Details" asp-route-id="@cat.category_Id">
                        <img src="/images/@sorce" class="img-fluid product-thumbnail">
                        <h3 class="product-title">@cat.category_name</h3>
                        <span class="icon-cross">
                            <img src="/images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div>
            }
 
        </div>

        </div>
</body>